{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "data-model",
  "description": "Output of the data-model-mapper agent. Entities, relationships, ER diagram, migration history, and test data implications.",
  "type": "object",
  "required": ["repoName", "generatedDate", "sourceProfile", "ormFramework", "databaseType", "confidence", "entities", "relationships", "erDiagram", "migrations", "dataPatterns", "testDataImplications"],
  "properties": {
    "repoName": { "type": "string" },
    "generatedDate": { "type": "string", "format": "date-time" },
    "sourceProfile": { "type": "string" },
    "ormFramework": { "type": "string" },
    "databaseType": { "type": "string" },
    "confidence": { "type": "string", "enum": ["High", "Medium", "Low"] },

    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "source", "confidence", "fields"],
        "properties": {
          "name": { "type": "string" },
          "tableName": { "type": ["string", "null"] },
          "source": { "type": "string" },
          "confidence": { "type": "string", "enum": ["High", "Medium", "Low"] },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": { "type": "string" },
                "column": { "type": ["string", "null"] },
                "type": { "type": "string" },
                "dbType": { "type": ["string", "null"] },
                "nullable": { "type": "boolean" },
                "primaryKey": { "type": "boolean" },
                "generated": { "type": "boolean" },
                "unique": { "type": "boolean" },
                "validated": { "type": "boolean" },
                "validationRules": { "type": "array", "items": { "type": "string" } }
              }
            }
          },
          "relationships": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "targetEntity"],
              "properties": {
                "type": { "type": "string", "enum": ["ONE_TO_ONE", "ONE_TO_MANY", "MANY_TO_ONE", "MANY_TO_MANY"] },
                "targetEntity": { "type": "string" },
                "mappedBy": { "type": ["string", "null"] },
                "cascade": { "type": "array", "items": { "type": "string" } },
                "fetchType": { "type": ["string", "null"] },
                "source": { "type": "string" }
              }
            }
          },
          "indexes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "columns": { "type": "array", "items": { "type": "string" } },
                "unique": { "type": "boolean" }
              }
            }
          },
          "constraints": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "columns": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      }
    },

    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "type"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "type": { "type": "string", "enum": ["ONE_TO_ONE", "ONE_TO_MANY", "MANY_TO_ONE", "MANY_TO_MANY"] },
          "foreignKey": { "type": ["string", "null"] },
          "cascade": { "type": "array", "items": { "type": "string" } },
          "required": { "type": "boolean" }
        }
      }
    },

    "erDiagram": { "type": "string", "description": "Mermaid erDiagram block" },

    "migrations": {
      "type": ["object", "null"],
      "properties": {
        "tool": { "type": "string" },
        "location": { "type": "string" },
        "migrationCount": { "type": "integer" },
        "latestVersion": { "type": ["string", "null"] },
        "confidence": { "type": "string", "enum": ["High", "Medium", "Low"] }
      }
    },

    "dataPatterns": {
      "type": "object",
      "properties": {
        "softDeletes": { "type": "array", "items": { "type": "string" } },
        "auditFields": { "type": "array", "items": { "type": "string" } },
        "enums": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "values": { "type": "array", "items": { "type": "string" } },
              "source": { "type": "string" }
            }
          }
        },
        "embeddedTypes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "usedIn": { "type": "array", "items": { "type": "string" } },
              "source": { "type": "string" }
            }
          }
        }
      }
    },

    "testDataImplications": {
      "type": "object",
      "properties": {
        "creationOrder": { "type": "array", "items": { "type": "string" } },
        "requiredSeedEntities": { "type": "array", "items": { "type": "string" } },
        "circularDependencies": { "type": "array", "items": { "type": "string" } },
        "uniqueConstraints": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
